{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "allowJs": false,
    "target": "ES2017",
    "noEmitOnError": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["node"]
  },
  "include": ["./src/**/*"]
}
